    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h2>Adicionar postagem</h2>

<form action="/admin/postagem/nova" method="POST">
    <label for="titulo">Titulo da postagem</label>
        <input type="text" id="titulo" name="titulo" placeholder="Titulo da postagem" class="form-control" required>
    
    <label for="slug">Slug</label>
        <input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control" required>

    <label for="descricao">Descrição</label>
        <input type="text" id="descricao" name="descricao" placeholder="Descrição da postagem" class="form-control">

    <label for="conteudo">Conteúdo</label>
        <textarea name="conteudo" id="conteudo" placeholder="Digite o conteúdo da postagem..." class="form-control" required></textarea>

    <label for="autor">Autor</label>
        <input type="text" name="autor" id="autor" placeholder="Autor da postagem" class="form-control" required>

    <label for="categoria">Categoria:</label>
        <select name="categoria" id="categoria" class="custom-select">
            {{#each categoria}}
            <option value="{{_id}}">{{nome}}</option>
            {{else}}
            <option value="0">Nenhuma categoria registrada</option>
            {{/each}}
        </select>
    <button type = "submit" class="btn btn-success mt-2">Cadastrar postagem</button>

</form>