<h2>Editar categoria</h2>

<form action="/admin/categoria/edit" method="POST">
   
    <input type="hidden" name="id" value="{{_id}}">

    <label for="nome">Nome</label>
        <input type="text" id="nome" name="nome" placeholder="Nome" class="form-control" value="{{nome}}">
    
    <label for="slug">Slug:</label>
        <input type="text" id="slug" name="slug" placeholder="Slug" class="form-control" value="{{slug}}">

    <button type = "submit" class="btn btn-success mt-2">Editar categoria</button>


</form>